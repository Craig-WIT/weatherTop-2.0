<form class="ui stacked segment form" action="/station/{{station.id}}/addReading" method="POST"
      style="color: white; background-color: #C9E5F0; border: 3px solid white;">
  <div class="field">
    <label>Weather Code</label>
    <input list="codes" placeholder="Code" name="code">
    <datalist id="codes">
      <option value="100">
      <option value="200">
      <option value="300">
      <option value="400">
      <option value="500">
      <option value="600">
      <option value="700">
      <option value="800">
    </datalist>
    <label>Temperature</label>
    <input placeholder="Enter in degrees celsius" name="temperature" min="-88.0" max="55.0" step=".1">
    <label>Wind Speed</label>
    <input placeholder="Enter a value between 0-117 kM / hr" name="windSpeed" min="0" max="117">
    <label>Wind Direction</label>
    <input placeholder="Enter a value between 0-360 degrees" name="windDirection" min="0" max="360"
           step="0.25">
    <label>Pressure</label>
    <input placeholder="0.00 hPa" name="pressure" min="860" max="1090" step="0.5">
  </div>
  <button id="submitButton" class="tiny ui blue submit animated button">
    <div class="visible content">Add Reading</div>
    <div class="hidden content">Are you sure?</div>
  </button>
</form>
<form class="ui stacked segment form" action="/station/{{station.id}}/addLiveReading" method="POST"
      style="color: white; background-color: #C9E5F0; border: 3px solid white;">
  <button id="submitButton" class="tiny ui blue submit animated button">
    <div class="visible content">Add Live Reading for {{station.name}}</div>
    <div class="hidden content">Are you sure?</div>
  </button>
</form>